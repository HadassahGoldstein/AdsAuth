<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>New Ad</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3 jumbotron">
        <form method="post" action="/Home/NewAd">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" placeholder="Name" class="form-control" name="name" />
                </div>
                <div class="col-md-6">
                    <input type="text" placeholder="Phone Number" class="form-control" name="cell" />
                </div>
            </div>
